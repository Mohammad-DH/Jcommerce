generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:syncmaster1898@localhost:3306/Jcommerce"
}

model User {
  User_Id Int @id @default(autoincrement()) @unique
  FirstName String? 
  LastName String? 
  PhoneNumber String @unique
  Email String?
  Admin Boolean @default(false)
  Code String?

  Orders Order[]
}

model Product {
  Product_Id Int @id @default(autoincrement()) @unique 
  Name String @unique
  Description String @db.VarChar(600)
  Image String
  Price String
  PriceWithUs String
  Link String @unique

  Category Category @relation(fields: [CategoryId], references: [Category_Id])
  CategoryId Int
  Orders Order[]
}

model Category {
  Category_Id Int @id @default(autoincrement()) @unique
  Name String
  Image String
  Product Product[] 
}

model Order {
  Order_Id Int @id @default(autoincrement()) @unique
  Product  Product @relation(fields: [ProductId], references: [Product_Id])
  ProductId Int

  User User @relation(fields:[User_Id],references:[User_Id]) 
  User_Id Int
}
